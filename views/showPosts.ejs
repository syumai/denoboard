<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://unpkg.com/normalize.css@8.0.1/normalize.css"
      rel="stylesheet"
    />
    <link href="/app.css" rel="stylesheet" />
    <title>Denoboard</title>
  </head>
  <body>
    <h1>
      <a href="/posts">
        Denoboard
      </a>
    </h1>
    <div class="form-container">
      <img class="deno-logo" src="https://deno.land/images/deno_logo_3.svg" />
      <form class="post-form" action="/posts" method="POST">
        <% if (name) { %>
        <input
          type="text"
          id="postName"
          name="name"
          placeholder="name"
          maxlength="20"
          value="<%= name %>"
          required
        />
        <input
          type="text"
          id="postFormBody"
          name="body"
          placeholder="message"
          maxlength="100"
          autofocus
          required
        />
        <% } else { %>
        <input
          type="text"
          id="postName"
          name="name"
          placeholder="name"
          maxlength="20"
          required
        />
        <input
          type="text"
          id="postFormBody"
          name="body"
          placeholder="message"
          maxlength="100"
          required
        />
        <% } %>
        <button>Submit</button>
      </form>
    </div>
    <div class="notice">
      Post disappears after 5 minutes.
    </div>
    <div class="github">
      <a href="https://github.com/syumai/denoboard/">GitHub</a>
    </div>
    <hr />
    <div class="posts">
      <% for (let post of posts) { %>
      <div class="post">
        <div class="post-header">
          <div class="post-header-name"><%= post.name %></div>
          <div class="post-header-date"><%= post.createdAt %></div>
        </div>
        <div class="post-body"><%= post.body %></div>
      </div>
      <% } %>
    </div>
  </body>
</html>
